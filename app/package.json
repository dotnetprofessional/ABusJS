{
  "name": "abus",
  "version": "0.0.1",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "testRegex": "(/__tests__/.*|\\.(test|spec)|Spec)\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "verbose": false,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/typings/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "globals": {
      "__TS_CONFIG__": {
        "module": "commonjs",
        "jsx": "react"
      }
    }
  },
  "devDependencies": {
    "jest": "^17.0.3",
    "jest-cli": "^17.0.3",
    "ts-jest": "^17.0.0"
  },
  "dependencies": {
    "typescript": "^2.1.1"
  }
}
