{
  "name": "abus",
  "version": "0.2.1",
  "author": "Garry McGlennon",
  "description": "A service bus implementation for javascript.",
  "repository": {
    "url": ""
  },
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "keywords": [
    "abus",
    "service bus",
    "queue"
  ],
  "engines": {
    "node": "*"
  },
  "scripts": {
    "test": "jest",
    "release-web": "npm run compile-web && npm run compile-web-minify",
    "compile-web": "rimraf out && tsc -p tsconfig.web.json",
    "compile-web-minify": "uglifyjs out/abus.js --output out/abus.min.js --compress dead_code,drop_debugger,conditionals,booleans,loops,properties,drop_console --mangle --wrap abus",
    "compile": "rimraf dist && tsc -d -t ES5 -p tsconfig.npm.json",
    "prepublish": "npm run compile"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "testRegex": "(/__tests__/.*|\\.(test|spec)|Spec)\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "verbose": true,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/typings/**",
      "!**/app/**"
    ],
    "coverageDirectory": "<rootDir>/coverage"
  },
  "devDependencies": {
    "@types/jest": "^18.1.1",
    "@types/node": "^7.0.5",
    "jest": "^18.0.1",
    "jest-cli": "^18.1.0",
    "ts-jest": "^18.0.3",
    "tslint": "^4.4.2",
    "uglify-js": "^2.8.7"
  },
  "dependencies": {
    "tslib": "^1.6.0",
    "typescript": "^2.1.6"
  }
}