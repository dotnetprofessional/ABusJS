{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2015.promise",
            "es5",
            "es2015.iterable",
            "es2017.object",
            "es2015.collection",
            "dom"
        ],
        "outDir": "build",
        "module": "commonjs",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": false,
        "stripInternal": true,
        "removeComments": false,
        "declaration": true,
        "importHelpers": false
    },
    "include": [
        "app/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}