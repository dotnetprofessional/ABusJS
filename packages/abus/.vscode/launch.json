{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jest Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/jest-cli/bin/jest.js",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "tsc",
            "args": [
                "--runInBand"
            ],
            "runtimeArgs": [
                "--harmony-async-await",
                "--no-deprecation"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/app"
            ],
            "skipFiles": [
                "node_modules/**/*.js",
                "lib/**/*.js"
            ]
        }
    ]
}