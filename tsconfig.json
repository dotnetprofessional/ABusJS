{
    "compilerOptions": {
        "target": "es2016",
        "lib": [
            "es2015.promise",
            "es5",
            "es2015.iterable",
            "es2017.object",
            "es2015.collection",
            "dom"
        ],
        "module": "commonjs",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist/app",
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": false,
        "stripInternal": true,
        "removeComments": false, // Removing them also removes JSDocs!
        //"mapRoot": "lib",
        "declaration": false, // Setting this to true will break debugging.
        //"outFile": "out/abus.js",
        "importHelpers": false
    },
    "exclude": [
        "node_modules"
    ]
}