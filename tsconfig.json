{
    "compilerOptions": {
        "target": "es2017",

        "module": "commonjs",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist/app",
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "stripInternal": true,
        "removeComments": true,
        //"mapRoot": "lib",
        "declaration": true // Setting this to true will break debugging.
        
        //"outFile": "out/abus.js"
        //"importHelpers": true
    },
        "exclude": [
        "node_modules"
    ]
}