{
  "name": "abus-root",
  "scripts": {
    "watch": "tsc -b --watch packages",
    "test": "mocha --colors --ui livedoc-mocha --reporter livedoc-mocha/livedoc-spec -O \"detailLevel=+summary+list+headers\" --recursive packages/**/*.Spec.js",
    "test-spec": "mocha --colors --ui livedoc-mocha --reporter livedoc-mocha/livedoc-spec -O \"detailLevel=spec+summary+list\" --recursive packages/**/*.Spec.js",
    "pack": "lerna run pack",
    "alpha-patch": "lerna version prerelease --no-git-tag-version --no-push"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/mocha"
    ]
  },
  "private": true,
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/diff": "3.5.2",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.10",
    "chai": "^4.2.0",
    "lerna": "^3.7.1",
    "livedoc-mocha": "0.4.0-beta-7",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2",
    "uglify-js": "^3.4.9"
  }
}